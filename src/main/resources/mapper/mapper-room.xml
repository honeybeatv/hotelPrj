  <mapper namespace="com.site.mapper.RoomMapper">
  
  <!-- index에서 검색시 -->
  	<select id="getlist" resultType="com.site.vo.RoomVo">
	select distinct * from room  where roomno in (
    select roomno day from reserve where
    not TO_DATE(#{start},'YYYYMMDD') between startday and endday 
	and not TO_DATE(#{end},'YYYYMMDD') between startday and endday) 
  	</select>
  	
  		<!-- 전체 room 정보 가져오기 -->
   <select id="selectroomsListAll" resultType="com.site.vo.RoomVo">
   		 select * from room order by roomno desc
	</select>
	
	<!-- 글쓰기 저장 -->
	<insert id="insertRoomsAddDo">
	  INSERT INTO ROOM VALUES('', '', '', '', '', '', 0, 0, 0, '', '', '');
	</insert>

  
